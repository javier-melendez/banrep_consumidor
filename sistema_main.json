{
  "system_name": "BanRep Consumidor Design System",
  "version": "1.0.0",
  "author": "Javier Andrés Meléndez",
  "foundation": {
    "colors": {
      "primary": {
        "main": "#0056b3",
        "description": "Azul institucional principal usado en fondos de portada y banners."
      },
      "secondary": {
        "main": "#0099cc",
        "description": "Azul claro usado para acentos, barras de progreso y bordes destacados."
      },
      "background": {
        "default": "#f8fafc",
        "surface": "#ffffff"
      },
      "status": {
        "info": "#3b82f6",
        "success": "#10b981",
        "accent": "#facc15"
      }
    },
    "typography": {
      "font_family": "Montserrat, sans-serif",
      "weights": {
        "light": 300,
        "regular": 400,
        "semibold": 600,
        "bold": 800
      },
      "scales": {
        "h1": "4rem",
        "h2": "2.5rem",
        "body": "1.125rem",
        "caption": "0.75rem"
      }
    },
    "spacing": {
      "unit": 4,
      "container_padding": "2rem",
      "gap_small": "1rem",
      "gap_large": "2rem"
    }
  },
  "components": {
    "info_box": {
      "border_width": "2px",
      "border_color": "#ffffff",
      "padding": "1.5rem",
      "accent_line_width": "40%"
    },
    "cards": {
      "border_radius": "1.5rem",
      "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "interactive_border": "border-left: 4px solid var(--banrep-light-blue)"
    },
    "buttons": {
      "nav_radius": "9999px",
      "nav_border": "2px solid #0056b3",
      "transition": "0.2s ease-in-out"
    }
  },
  "animations": {
    "slide_entry": "slideFadeIn 0.6s ease-out",
    "carousel_transition": "flipIn 0.5s ease-out"
  }
}